{
  "hooks": {
    "*": {
      "post": {
        "matcher": "(Edit|Write)",
        "hook": "multi_linter.sh"
      }
    },
    "PreToolUse": {
      "matcher": "Write|Edit",
      "hook": "protect_linter_configs.sh"
    },
    "Bash": {
      "pre": {
        "matcher": ".*",
        "hook": "enforce_package_managers.sh"
      }
    }
  }
}
